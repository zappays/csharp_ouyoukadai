@model OuyouKadai.Models.User

@{
    ViewData["Title"] = "Edit";
}

<h1>会員編集</h1>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RegID" />
            <input type="hidden" asp-for="Updated_byID" />

            <div class="form-group row my-1">
                <label asp-for="Id" class="control-label col-sm-1"></label>
                <div class="col-sm-8">
                    <input asp-for="Id" class="form-control" readonly />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row my-1">
                    
                <label asp-for="Name" class="control-label col-sm-1"></label>
                <div class="col-sm-8">
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row my-1">
                <label asp-for="Pass" class="control-label col-sm-1"></label>
                    <div class="col-sm-8">
                    <input asp-for="Pass" class="form-control" />
                    <span asp-validation-for="Pass" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row my-1">
                <label asp-for="AuthID" class="control-label col-sm-1"></label>
                <div class="col-sm-8">
                    <select asp-for="AuthID" class="form-control" asp-items="ViewBag.SelectOptions"></select>
                    <span asp-validation-for="AuthID" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row my-1">
                <label asp-for="RegID" class="control-label col-sm-1"></label>
                <div class="col-sm-8">
                    <input asp-for="Reg_name" class="form-control" readonly />
                    <span asp-validation-for="RegID" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row my-1">
                <label asp-for="Created_at" class="control-label col-sm-1"></label>
                <div class="col-sm-8">
                    <input asp-for="Created_at" class="form-control" readonly />
                    <span asp-validation-for="Created_at" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row my-1">
                <label asp-for="Updated_byID" class="control-label col-sm-1"></label>
                <div class="col-sm-8">
                    <input asp-for="Updated_by_name" class="form-control" readonly />
                    <span asp-validation-for="Updated_byID" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row my-1">
                <label asp-for="Updated_at" class="control-label col-sm-1"></label>
                <div class="col-sm-8">
                    <input asp-for="Updated_at" class="form-control" readonly />
                    <span asp-validation-for="Updated_at" class="text-danger"></span>
                </div>
            </div>
            
            <div class="form-group my-1">
                <input type="submit" value="保存" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">会員一覧</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
