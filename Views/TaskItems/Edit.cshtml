@model OuyouKadai.Models.TaskItem

@{
    ViewData["Title"] = "Edit";
}

<h1>タスク編集</h1>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RegID" />
            <input type="hidden" asp-for="Updated_byID" />

            <div class="form-group row my-1 row my-1">
                <label asp-for="Id" class="control-label col-sm-1"></label>
                <div class="col-sm-8">
                <input asp-for="Id" class="form-control" readonly />
                <span asp-validation-for="Id" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group row my-1">
                <label asp-for="Title" class="control-label col-sm-1"></label>
                <div class="col-sm-8">
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row my-1">
                <label asp-for="Body" class="control-label col-sm-1"></label>
                <div class="col-sm-8">
                    <textarea asp-for="Body" class="form-control"></textarea>
                    <span asp-validation-for="Body" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row my-1">
                <label asp-for="PicID" class="control-label col-sm-1"></label>
                <div class="col-sm-8">
                    <select asp-for="PicID" class="form-control" asp-items="ViewBag.SelectOptionsUser"></select>
                    <span asp-validation-for="PicID" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row my-1">
                <label asp-for="StatusID" class="control-label col-sm-1"></label>
                <div class="col-sm-8">
                    <select asp-for="StatusID" class="form-control" asp-items="ViewBag.SelectOptionsStatus"></select>
                    <span asp-validation-for="StatusID" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row my-1">
                <label asp-for="PriorityID" class="control-label col-sm-1"></label>
                <div class="col-sm-8">
                    <select asp-for="PriorityID" class="form-control" asp-items="ViewBag.SelectOptionsPriority"></select>
                    <span asp-validation-for="PriorityID" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row my-1">
                <label asp-for="Deadline" class="control-label col-sm-1"></label>
                <div class="col-sm-8">
                    <input asp-for="Deadline" class="form-control" />
                    <span asp-validation-for="Deadline" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row my-1">
                <label asp-for="Reg" class="control-label col-sm-1"></label>
                <div class="col-sm-8">
                    <input asp-for="Reg.Name" class="form-control" readonly />
                    <span asp-validation-for="Reg" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row my-1">
                <label asp-for="Created_at" class="control-label col-sm-1"></label>
                <div class="col-sm-8">
                    <input asp-for="Created_at" class="form-control" readonly />
                    <span asp-validation-for="Created_at" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row my-1">
                <label asp-for="Updated_byID" class="control-label col-sm-1"></label>
                <div class="col-sm-8">
                    <input asp-for="Updated_by_name" class="form-control" readonly />
                    <span asp-validation-for="Updated_byID" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row my-1">
                <label asp-for="Updated_at" class="control-label col-sm-1"></label>
                <div class="col-sm-8">
                    <input asp-for="Updated_at" class="form-control" readonly />
                    <span asp-validation-for="Updated_at" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="保存" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">タスク一覧</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
