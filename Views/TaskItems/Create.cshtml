@model OuyouKadai.Models.TaskItem

@{
    ViewData["Title"] = "Create";
}

<h1>タスク登録</h1>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group row my-1">
                <label asp-for="Title" class="control-label col-sm-1"></label>
                <div class="col-sm-8">
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row my-1">
                <label asp-for="Body" class="control-label col-sm-1"></label>
                <div class="col-sm-8">
                    <textarea asp-for="Body" class="form-control"></textarea>
                    <span asp-validation-for="Body" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row my-1">
                <label asp-for="PicID" class="control-label col-sm-1"></label>
                <div class="col-sm-8">
                    <select asp-for="PicID" class="form-control" asp-items="ViewBag.SelectOptionsUser">
                        <option value="">--選択してください--</option>
                    </select>
                    <span asp-validation-for="PicID" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row my-1">
                    <label asp-for="StatusID" class="control-label col-sm-1"></label>
                        <div class="col-sm-8">
                    <select asp-for="StatusID" class="form-control" asp-items="ViewBag.SelectOptionsStatus">
                        <option value="">--選択してください--</option>
                    </select>
                    <span asp-validation-for="StatusID" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row my-1">
                <label asp-for="PriorityID" class="control-label col-sm-1"></label>
                <div class="col-sm-8">
                    <select asp-for="PriorityID" class="form-control col-sm-1" asp-items="ViewBag.SelectOptionsPriority">
                    <option value="">--選択してください--</option>
                </select>
                <span asp-validation-for="PriorityID" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row my-1">
                <label asp-for="Deadline" class="control-label col-sm-1"></label>
                <div class="col-sm-8">
                    <input asp-for="Deadline" class="form-control" value="@ViewBag.Datetime" />
                    <span asp-validation-for="Deadline" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="登録" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">タスク一覧</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
